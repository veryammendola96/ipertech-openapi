{
  "openapi": "3.0.3",
  "info": {
    "title": "Ipertech API",
    "description": "API per accedere al catalogo prodotti, ordini e spedizioni di Ipertech.",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "https://ipertech.it/api", "description": "Ipertech main API server" }
  ],
  "tags": [
    { "name": "Products" },
    { "name": "Orders" },
    { "name": "Payments" }
  ],
  "paths": {
    "/products": {
      "get": {
        "operationId": "listProducts",
        "tags": ["Products"],
        "summary": "List products",
        "description": "Retrieve the list of available products.",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": false,
            "description": "Search term",
            "schema": { "type": "string" }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Max items to return",
            "schema": { "type": "integer", "minimum": 1, "maximum": 100, "default": 20 }
          }
        ],
        "responses": {
          "200": {
            "description": "Products retrieved",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } }
              }
            }
          },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/payments": {
      "get": {
        "operationId": "listPaymentMethods",
        "tags": ["Payments"],
        "summary": "Supported payment methods",
        "description": "List of available payment methods.",
        "responses": {
          "200": {
            "description": "Payment methods",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/PaymentMethod" } }
              }
            }
          },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/orders": {
      "post": {
        "operationId": "createOrder",
        "tags": ["Orders"],
        "summary": "Create order",
        "description": "Submit an order with customer data and line items.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/CreateOrderRequest" } }
          }
        },
        "responses": {
          "201": {
            "description": "Order created",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/OrderCreated" } }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/orders/{order_id}/status": {
      "get": {
        "operationId": "getOrderStatus",
        "tags": ["Orders"],
        "summary": "Order status",
        "description": "Return current status of an order.",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "description": "Order identifier",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Order status",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/OrderStatusResponse" } }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/orders/{order_id}/tracking": {
      "get": {
        "operationId": "getOrderTracking",
        "tags": ["Orders"],
        "summary": "Shipping tracking",
        "description": "Get tracking info for an order.",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "description": "Order identifier",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Tracking info",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/TrackingInfo" } }
            }
          },
          "404": { "$ref": "#/components/responses/NotFound" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "required": ["id", "name", "price"],
        "properties": {
          "id": { "type": "string", "description": "Product identifier" },
          "name": { "type": "string", "description": "Product name" },
          "price": { "type": "number", "description": "Unit price" },
          "currency": { "type": "string", "description": "ISO currency code", "default": "EUR" },
          "image_url": { "type": "string", "description": "Image URL" },
          "description": { "type": "string", "description": "Short description" }
        }
      },
      "PaymentMethod": {
        "type": "string",
        "enum": ["credit_card", "paypal", "klarna", "cash_on_delivery"]
      },
      "OrderStatus": {
        "type": "string",
        "enum": ["pending", "confirmed", "shipped", "delivered", "cancelled"]
      },
      "OrderStatusResponse": {
        "type": "object",
        "required": ["order_id", "status"],
        "properties": {
          "order_id": { "type": "string" },
          "status": { "$ref": "#/components/schemas/OrderStatus" }
        }
      },
      "OrderLineItem": {
        "type": "object",
        "required": ["product_id", "quantity"],
        "properties": {
          "product_id": { "type": "string" },
          "quantity": { "type": "integer", "minimum": 1 }
        }
      },
      "ShippingAddress": {
        "type": "object",
        "properties": {
          "street": { "type": "string" },
          "city": { "type": "string" },
          "postal_code": { "type": "string" },
          "country": { "type": "string" }
        }
      },
      "CreateOrderRequest": {
        "type": "object",
        "required": ["customer_name", "products"],
        "properties": {
          "customer_name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "address": { "$ref": "#/components/schemas/ShippingAddress" },
          "products": { "type": "array", "items": { "$ref": "#/components/schemas/OrderLineItem" }, "minItems": 1 },
          "payment_method": { "$ref": "#/components/schemas/PaymentMethod" }
        }
      },
      "OrderCreated": {
        "type": "object",
        "required": ["order_id", "status"],
        "properties": {
          "order_id": { "type": "string" },
          "status": { "$ref": "#/components/schemas/OrderStatus" }
        }
      },
      "Error": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" }
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
      },
      "NotFound": {
        "description": "Not found",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
      },
      "ServerError": {
        "description": "Server error",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
      }
    }
  }
}
