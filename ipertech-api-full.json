{
  "openapi": "3.0.3",
  "info": {
    "title": "Ipertech API",
    "description": "API per accedere al catalogo prodotti, ordini e spedizioni di Ipertech.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://ipertech.it/api",
      "description": "Ipertech main API server"
    }
  ],
  "externalDocs": {
    "description": "Swagger UI Documentation",
    "url": "https://ipertech.it/pages/ipertech-api-docs"
  },
  "paths": {
    "/products": {
      "get": {
        "summary": "List of products",
        "description": "Retrieve the list of available products",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "example": [
                  {
                    "id": "prd_001",
                    "name": "Samsung TV 55\"",
                    "price": 499.99
                  }
                ]
              }
            }
          }
        }
      }
    },
    "/orders": {
      "post": {
        "summary": "Create order",
        "description": "Submit an order with customer data",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "customer_name": "John Doe",
                "products": [
                  {
                    "id": "prd_001",
                    "quantity": 1
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Order created"
          }
        }
      }
    },
    "/payments": {
      "get": {
        "summary": "Supported payment methods",
        "description": "List of available payment methods",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "example": [
                  "credit_card",
                  "paypal",
                  "klarna",
                  "cash_on_delivery"
                ]
              }
            }
          }
        }
      }
    },
    "/orders/{order_id}/tracking": {
      "get": {
        "summary": "Shipping tracking",
        "description": "Get tracking info for an order",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingInfo"
                }
              }
            }
          }
        }
      }
    },
    "/orders/{order_id}/status": {
      "get": {
        "summary": "Order status",
        "description": "Return current status of an order",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderStatus"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderStatus": {
        "type": "string",
        "enum": [
          "pending",
          "confirmed",
          "shipped",
          "delivered",
          "cancelled"
        ]
      },
      "PaymentMethod": {
        "type": "string",
        "enum": [
          "credit_card",
          "paypal",
          "klarna",
          "cash_on_delivery"
        ]
      },
      "TrackingInfo": {
        "type": "object",
        "properties": {
          "carrier": {
            "type": "string"
          },
          "tracking_number": {
            "type": "string"
          },
          "tracking_url": {
            "type": "string"
          }
        }
      }
    }
  }
}
